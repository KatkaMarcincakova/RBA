---
import "../styles/base.css";
import { Image } from 'astro:assets';

import Navbar from "@components/Navbar.astro";
import Footer from "@components/Footer.astro";

import { ViewTransitions } from 'astro:transitions';

const { title } = Astro.props

---

<html lang="en">
    <head>
        <meta charset="UTF-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<meta name="theme-color" content="#2a28a4"/>
		<meta name="description" content="RBA">
		<title>{title} | RBA</title>
	<!--	<link rel="shortcut icon" type="image/x-icon" href={favicon.src} id="tabFavicon"> -->

        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Rubik+Glitch&family=Rubik:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,300;1,400&display=swap" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css2?family=Tektur:wght@400;500;600;700;800;900&display=swap" rel="stylesheet"> 
            
        <ViewTransitions />
    </head>
    <body class="bg-light">
        <Navbar/>
        <main class="min-h-[65vh]">
            <slot />
        </main>
        <Footer/>
        <script src="../scripts/burger-menu.js"></script>
		<script src="../scripts/carousel.js"></script>
		<script src="../scripts/flicker.js"></script>
    </body>
</html>